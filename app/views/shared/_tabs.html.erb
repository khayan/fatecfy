<div class="tabs is-medium is-centered shared">
  <ul>
    <!-- Categoria Álbuns na tab de search -->
    <% if albums %>
      <li class="is-active">
        <a target="#albums">Álbums</a>
      </li>
    <% end %>
    
    <!-- Categoria Artistas na tab de search -->
    <% if artists %>
      <li>
        <a target="#artists">Artistas</a>
      </li>
    <% end %>
 
    <!-- Categoria Músicas na tab de search -->
    <% if songs %>
      <li>
        <a target="#songs">Músicas</a>
      </li>
    <% end %>
  </ul>
</div>

<!-- Conteúdo renderizado dos Álbuns -->
<div class="tabs-content">
  <% if albums %>
    <div id="albums" class="tab-item active">
      <div class="columns is-mobile is-multiline">
        <%= render albums %>
      </div>
    </div>
  <% end %>

<!-- Conteúdo renderizado dos Artistas -->
  <% if artists %>
    <div id="artists" class="tab-item">
      <div class="columns is-mobile is-multiline">
        <%= render artists %>
      </div>
    </div>
  <% end %>
</div>